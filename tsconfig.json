{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "outDir": "build",
        "skipLibCheck": true,
        "module": "NodeNext",
        "sourceMap": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "moduleResolution": "nodenext",
        "target": "ESNext"
    },
    "exclude": ["tests/**", "build/**"],
    "include": ["app.ts", "src/**.ts"]
}